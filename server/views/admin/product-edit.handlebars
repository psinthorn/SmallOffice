<div class="container-fluid top-title-header">
    <div class="container">
        จัดการรายละเอียดสินค้า
    </div>
    <div class="divider"></div>
    <br>
    <div class="container">
        <div class="row">
            <a href="/admin/products">
                <div class="btn right">กลับหน้าเดิม</div>
            </a>
        </div>

    </div>
    <br>
    <div class="container">

        <div class="row">
            <div class="col s12 m12 l12">
                <div class="card white darken-1">
                    <div class="card-content gray-text">

                        <form action="/admin/product/{{ product.id }}?_method=PUT" method="post">
                            <input type="hidden" name="_method" value="PUT">
                            <div class="row">

                                <div class="input-field col s10 m10 l10">

                                    <input type="text" name="order" value="{{ product.order }}">
                                    <label for="order">ลำดับ</label>

                                </div>

                                <div class="input-field col s10 m10 l10">

                                    <input type="text" name="title" value="{{ product.title }}" required>
                                    <label for="title">ชื่อสินค้า</label>

                                </div>
                            </div>

                            <div class="row">

                                <div class="input-field col s12 m12 l12">

                                    <h5>รายละเอียดสินค้า</h5>
                                    <textarea id="desc" name="desc" class="materialize-textarea"
                                        required>{{ product.desc }}</textarea>

                                </div>

                            </div>

                            <div class="row">
                                <div class="input-field col s12 m12 l12">
                                    <select name="category" id="category">
                                        {{#select product.category }}
                                        {{#each categories }}
                                        <option value={{title}}>{{title}}</option>
                                        {{/each}}
                                        {{/select }}
                                    </select>
                                    <label for="status">หมวดหมู่</label>
                                </div>
                            </div>

                            <div class="row">
                                <div class="input-field col s12 m12 l12">
                                    <select name="status" id="status">
                                        {{#select product.status }}

                                        <option value="Public">Public</option>
                                        <option value="Private">Private</option>
                                        <option value="Unpublished">Unpublished</option>

                                        {{/select }}
                                    </select>
                                    <label for="status">สถานะ</label>
                                </div>
                            </div>

                            <div class="row">
                                <input type="submit" value="Update" class="btn right">
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="row">

                {{!-- Single image upload --}}
                <div class="col s12 m6 l6">
                    {{> _image-upload-product }}
                </div>
                <div class="col s12 m6 l6">
                    {{> _price-update }}
                </div>
            </div>

            <div class="row">
                {{> _product_gallery-manage }}
            </div>

        </div>


        {{!-- Include Manage --}}
        <div class="row">

            {{> _product-edit-include }}

        </div>

        {{!-- Exclude Manage --}}
        <div class="row">

            {{> _product-edit-exclude }}

        </div>

    </div>