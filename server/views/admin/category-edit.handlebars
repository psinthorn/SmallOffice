<div>
    {{> _header-section-title}}
</div>
<div class="divider"></div>
<br>
<div class="container">
    <div class="row">
        <a href="/admin/category">
            <div class="btn right">กลับหน้าเดิม</div>
        </a>
    </div>

</div>
<br>
<div class="container">

    {{> _msg}}

    <form action="/admin/category/{{category.id}}?_method=PUT" method="post">
        <input type="hidden" name="_method" value="PUT">
        <div class="row">
            <div class="input-field">
                <input type="text" name="title" value="{{category.title}}">
                <label for="title">ชื่อหมวดหมู่</label>
            </div>

        </div>

        <div class="row">
            <div class="input-field">
                <h5>รายละเอียดหมวดหมู่</h5>
                <textarea name="desc" id="desc" cols="30" rows="10">{{category.desc}}</textarea>
                {{!-- <input type="text" name="description" value="{{category.desc}}">
                    <label for="description">Category Description</label> --}}
            </div>

        </div>


        <div class="row">
            <div class="input-field">
                <select name="categorymain" id="categorymain">
                    {{#select category.categorymain}}
                    {{#each categoriesMain }}
                    <option value={{title}}>{{title}}</option>
                    {{/each}}
                    {{/select}}
                </select>
                <label for="categorymain">หมวดหมู่หลัก</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <select name="categorysub" id="categorysub">
                    {{#select category.categorysub}}
                    {{#each categoriesSub }}
                    <option value={{title}}>{{title}}</option>
                    {{/each}}
                    {{/select}}
                </select>
                <label for="categorysub">หมวดหมู่รอง</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <select name="status" id="status">
                    {{#select category.status}}
                    <option value="public">Public</option>
                    <option value="private">Private</option>
                    <option value="unpublished">Unpublished</option>
                    {{/select}}
                </select>
                <label for="status">Status</label>
            </div>
        </div>

        <div class="row">
            <input type="submit" value="Update" class="btn right">
        </div>

    </form>

</div>