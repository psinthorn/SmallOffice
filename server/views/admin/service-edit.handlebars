<div class="container-fluid top-title-header">
    <div class="container">
        {{ sectionTitle }}
    </div>
    <div class="divider"></div>
</div>
<br>

<div class="container">
    <div class="row">
        <a href="/admin/services">
            <div class="btn right">กลับหน้าเดิม</div>
        </a>
    </div>



    {{!-- banner image upload --}}
    {{!-- <div class="col s12 m12 l12">
                        {{> _image-upload-service-banner }}
                    </div> --}}

    <div class="row">
        <div class="col s12 m12 l12">
            <div class="card white darken-1">
                <div class="card-content gray-text">

                    <form action="/admin/service/{{ service.id }}?_method=PUT" method="post">
                        <input type="hidden" name="_method" value="PUT">
                        <div class="row">

                            <div class="input-field col s2 m2 l2">

                                <input type="text" name="order" value="{{ service.order }}">
                                <label for="order">ลำดับ.</label>

                            </div>

                            <div class="input-field col s10 m10 l10">
                                <input type="text" name="title" value="{{ service.title }}" required>
                                <label for="title">ชื่อบริการ</label>

                            </div>
                        </div>

                        <div class="row">

                            <div class="input-field col s12 m12 l12">

                                <h5>รายละเอียด</h5>
                                <textarea id="desc" name="desc" class="materialize-textarea"
                                    required>{{ service.desc }}</textarea>

                            </div>

                        </div>

                        <div class="row">
                            <div class="input-field col s12 m12 l12">
                                <select name="category" id="category">
                                    {{#select service.category }}
                                    {{#each categories }}
                                    <option value={{title}}>{{title}}</option>
                                    {{/each}}
                                    {{/select }}
                                </select>
                                <label for="category">หมวดหมู่</label>
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field col s12 m12 l12">
                                <select name="status" id="status">
                                    {{#select service.status }}

                                    <option value="Public">Public</option>
                                    <option value="Private">Private</option>
                                    <option value="Unpublished">Unpublished</option>

                                    {{/select }}
                                </select>
                                <label for="status">สถานะ</label>
                            </div>
                        </div>

                        <div class="row">
                            <input type="submit" value="Update" class="btn right">
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="row">

            {{!-- Single image upload --}}
            <div class="col s12 m6 l6">
                {{> _image-upload-service }}
            </div>
            <div class="col s12 m6 l6">
                {{> _service-price-update }}
            </div>
        </div>

        {{!-- <div class="row">
            {{> _service-gallery-manage }}
        </div> --}}

    </div>


    {{!-- Include Manage --}}
    <div class="row">

        {{> _service-edit-include }}

    </div>

    {{!-- Exclude Manage --}}
    <div class="row">

        {{> _service-edit-exclude }}

    </div>

</div>