<div class="container">

    <div class="row">
       {{!-- {{> _msg }} --}}
    </div>


    <h3>Current products Category</h3>
    <div class="hr-1px"></div>
    <div class="row">
        <div class="left"></div>
        <a href="/admin/product-category/add">
            <div class="btn right">Add New Category</div>
        </a>
    </div>
    <div class="row">

        {{#if categories }}

        <table class="striped">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Title</th>
                    <th>Descriptions</th>
                    <th>Link Url</th>
                    <th>Status</th>
                    <th colspan="2" class="center-align">Manage</th>

                </tr>
            </thead>

            <tbody>


                {{#each categories }}


                <tr>
                    <td>
                        <img src="/images/productcategory/{{ imgUrl }}" alt="{{ imgUrl }}" class="responsive-img" style="width: 100px">
                    </td>
                    <td>{{ title }}</td>

                    <td>
                            {{{ desc }}}
                    </td>

                     <td>
                            {{ linkUrl }}
                    </td>

                    <td>{{ status}}</td>

                    <td class="right-align">
                        <a href="/admin/product-category/edit/{{ id }}" class="btn">Edit</a>
                    </td>
                    <td class="left-align">
                        <form action="/admin/product-category/{{ id }}?_method=DELETE" method="post" id="delete-form">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn red">X</button>
                        </form>



                    </td>


                </tr>
                {{/each}}

            </tbody>
        </table>

        {{else}}
        <p>Currently is no category available!</p>
        {{/if}}


    </div>
</div>