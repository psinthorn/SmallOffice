<div class="container-fluid top-title-header">
    <div class="container">
        แก้ไขรายละเอียด
    </div>
    <div class="divider"></div>
    <br>
    <div class="container">
        <div class="row">
            <div class="left"></div>
            <a href="/admin/about">
                <div class="btn right">กลับหน้าหลัก</div>
            </a>
        </div>
        <div class="row">
        </div>
    </div>
</div>



<div class="container">

    <div class="row">

        {{> _msg}}

        <div class="col s12 m12 l12">


            <div class="col s12 m12 l12">
                <div class="card white darken-1">
                    <div class="card-content gray-text">

                        <form action="/admin/about/{{ about.id }}?_method=PUT" method="post">
                            <input type="hidden" name="_method" value="PUT">


                            <div class="row">
                                <div class="input-field col s12 m12 l12">

                                    <input type="text" name="title" value="{{ about.title}}">
                                    <label for="title">หัวข้อ</label>

                                </div>
                            </div>

                            <div class="row">
                                <div class="input-field col s12 m12 l12">

                                    <textarea name="desc" id="desc" cols="30" rows="10">{{ about.desc }}</textarea>
                                    <label for="desc">รายละเอียด</label>
                                </div>
                            </div>

                            <div class="row">
                                <div class="input-field col s12 m12 l12">
                                    <input type="text" name="manageBy" value="{{ about.manageBy }}">
                                    <label for="manageBy">Manage By</label>

                                </div>
                            </div>



                            <div class="row">
                                <div class="input-field col s12 m12 l12">
                                    <select name="status" id="status">
                                        {{#select about.status }}
                                        <option value="public">Public</option>
                                        <option value="private">Private</option>
                                        <option value="Unpublished">unpublished</option>
                                        {{/select }}
                                    </select>
                                    <label for="status">Status</label>
                                </div>
                            </div>

                            <div class="row">

                                <input type="submit" value="Update" class="btn right">
                            </div>
                        </form>

                        <div class="row">
                            {{> _about-image-upload }}
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>