 {{!-- Image Update --}}

                    <div class="col s12 m12 l12">

                        <form action="/admin/welcome/image/{{ welcome.id }}?_method=PUT" method="post" enctype="multipart/form-data">
                            <input type="hidden" name="_method" value="PUT">

                            <div class="card white darken-1">
                                <div class="card-content gray-text">

                                   <div class="row">
                                      <h5>Top Banner Image</h5>
                                        <div class="hr-1px"></div>

                                        <div class="col s12 m4 l4">

                                        <div class="file-field input-field">                                                                                      
                                              <div class="row">
                                                         <div class="file-path-wrapper">
                                                        <input class="file-path validate" type="text">
                                                        </div>

                                                </div>

                                                <div class="row">
                                                        <div class="btn">
                                                         <span>Choose image</span>
                                                         <input type="file" name="imgUrl" required>
                                                         </div>
                                                </div>                                           
                                            </div>
                                            
                                        </div>


                                        <div class="col s12 m8 l8">

                                            <div class="row">
                                             <input type="hidden" name="oldImgUrl" value="{{ welcome.imgUrl }}">
                                                <img src="/images/welcome/{{ welcome.imgUrl }}" alt="{{ welcome.imgUrl }}" class="responsive-img" >
                                             </div>

                                             <div class="row">
                                            <input type="submit" value="Update" class="btn right">
                                            </div>


                                        </div>



                                    </div>
                                </div>
                            </div>
                        </form>

                        <p>*Image size recommendation is 1024x300 Pixels</p>
                        <br>
                        {{!-- <a class="btn" href="/admin/apartment/gallery/{{ apartment.id }}">Gallery Manage</a> --}}
                    </div>