<div class="card">
    <div class="card-content">
        <span class="card-title">Get Your Ticket</span>
        <form action="/payment/paypal" method="POST">


            <div class="row">
                <div class="input-field">
                    <input type="text" class="datepicker" name="tourdate">
                    <label for="datepicker">Select Tour Date</label>
                </div>
            </div>
                <div class="row">
                    <div class="col s12 m6 l6 input-field">
                        <input type="text" name="fname" required>
                        <label for="fname">First Name</label>
                    </div>

                    <div class="col s12 m6 l6 input-field">
                        <input type="text" name="lname" required >
                        <label for="lname">Last Name</label>
                    </div>

                </div>

               <div class="row">
                    <div class="col s12 m6 l6 input-field">
                        <input type="email" name="email" required >
                        <label for="email">Your Email Address</label>
                    </div>

                    <div class="col s12 m6 l6 input-field">
                        <input type="text" name="phone">
                        <label for="phone">Phone No.</label>
                    </div>
                </div>

                <div class="row">
                    <div class="col s12 m12 l12 input-field">
                        <input type="text" name="pickupat" required>
                        <label for="pickupat">Pickup Location Name ( Ex. Hotel Name , Hinta Hinyai )</label>
                </div>
                
                <div class="row">
                    <div class="col s12 m12 l12 right">
                        <label>
                            <input type="checkbox" name="readPolicy" class="filled-in" required />
                            <span>*I has been read and accepted <a href="/term-policies" target="_blank"> Term & Conditions</a></span>
                        </label>
                    </div>
                </div>

                <input type="hidden" value="{{ tour.title }}" name="title">
                <input type="hidden" value="Tour" name="skuType">
                <input type="hidden" value="{{ tour.price.sale}}" name="sale"> 

                <div class="row">

                    {{#if tour.price.sale  }}
                
                <button class="btn light-blue accent-4 right" style="inline-block" type="submit">               
                    Book Now
                    {{ tour.price.sale }}.00 Baht   
                </button> {{/if}}

                </div>
                


        </form>
        </div>
    </div>