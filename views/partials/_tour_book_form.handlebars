<div class="card">
    <div class="card-content">
        <span class="card-title">Get Your Ticket</span>
        <form action="/payment/paypal" method="POST">


            <div class="row">
                <div class="input-field">
                    <input type="text" class="datepicker" name="tourdate">
                    <label for="datepicker">Select Date</label>
                </div>

                <div class="row">
                    <div class="col s12 m6 l6 input-field">
                        <input type="text" name="fname">
                        <label for="fname">First Name</label>
                    </div>

                    <div class="col s12 m6 l6 input-field">
                        <input type="text" name="lname">
                        <label for="lname">Last Name</label>
                    </div>

                </div>

                <div class="row">
                    <div class="col s12 m12 l12 input-field">
                        <input type="text" name="email">
                        <label for="email">Your Email Address</label>
                    </div>
                </div>

                <div class="row">
                    <div class="col s12 m12 l12">
                        <label>
                            <input type="checkbox" class="filled-in"/>
                            <span>I has been read and accepted Term and Policies</span>
                        </label>
                    </div>
                </div>

                <input type="hidden" value="{{ tour.title }}" name="title">
                <input type="hidden" value="Tour" name="skuType">
                <input type="hidden" value="{{ tour.price.sale}}" name="sale"> {{#if tour.price.sale }}
                <button class="btn light-blue accent-4 right" style="inline-block" type="submit">               
                    Book Now
                    {{ tour.price.sale }}.00 Baht   
                </button> {{/if}}


        </form>
        </div>
    </div>