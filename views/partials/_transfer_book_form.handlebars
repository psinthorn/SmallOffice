<div class="card">
    <div class="card-content">
        <span class="card-title">Transfers Service Information</span>
        <form action="/payment/paypal" method="POST">


            <div class="row">
                <div class="col s12 m6 l6 input-field">
                    <input type="text" class="datepicker" name="tranferdate">
                    <label for="datepicker">Select Date</label>
                </div>

                <div class="col s12 m6 l6 input-field">
                    <input type="text" class="timepicker" name="transfertime">
                    <label for="datepicker">Pickup Time</label>
                </div>
            </div>

             <div class="row">
                    <div class="col s12 m6 l6 input-field">
                        <input type="text" name="from" value="{{ transfer.from }}">
                        <label for="fname">Pickup From</label>
                    </div>

                    <div class="col s12 m6 l6 input-field">
                        <input type="text" name="to" value="{{ transfer.to }}" >
                        <label for="lname">To</label>
                    </div>

                </div>

                <div class="row">
                    <div class="col s12 m12 l12 input-field">
                        <input type="text" name="locationname" required>
                        <label for="fname">Pickup Location Name ( Ex. Hotel Name , Hinta Hinyai )</label>
                </div>

                 <div class="row">
                    <div class="col s12 m6 l6 input-field">
                        <input type="text" name="price" value="{{ transfer.price }}.00 Baht">
                        <label for="fname">Price</label>
                    </div>

                    <div class="col s12 m6 l6 input-field">
                        <input type="text" name="type" value="{{ transfer.type }}" >
                        <label for="lname">Vehicle Type</label>
                    </div>

                </div>

                <div class="row">
                    <span class="card-title">Contact Information</span>
                </div>
            

                <div class="row">
                    <div class="col s12 m6 l6 input-field">
                        <input type="text" name="fname" required>
                        <label for="fname">First Name</label>
                    </div>

                    <div class="col s12 m6 l6 input-field">
                        <input type="text" name="lname" required >
                        <label for="lname">Last Name</label>
                    </div>

                </div>

                <div class="row">
                    <div class="col s12 m6 l6 input-field">
                        <input type="email" name="email" required >
                        <label for="email">Your Email Address</label>
                    </div>

                    <div class="col s12 m6 l6 input-field">
                        <input type="text" name="phone">
                        <label for="email">Phone No.</label>
                    </div>
                </div>

                <div class="row">
                     
                    <div class="col s12 m6 l6">
                        <label>
                            <input type="checkbox" name="readPolicy" class="filled-in" required />
                            <span>*I has been read and accepted <a href="/term-policies" target="_blank"> Term and Policies</a></span>
                        </label>
                    </div>
                    <div class="col s12 m6 l6"></div>
                </div>

                <input type="hidden" value="{{ transfer.from }}" name="from">
                <input type="hidden" value="{{ transfer.to }}" name="to">
                <input type="hidden" value="Transfer" name="skuType">
                <input type="hidden" value="{{ transfer.price }}" name="price"> 

               <div class="row">
                   
                   <div class="col s12 m6 l6">
                       <button class="btn light-blue accent-4 " style="inline-block" type="submit">               
                        Book Now 
                        </button> 
                   </div>

                   <div class="col s12 m6 l6"></div>
                
               </div>
                
                
               


        </form>
        </div>
    </div>