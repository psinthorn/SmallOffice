<div class="row">

    {{> _msg}}

         
                <h3 class="header-text-01">Product Lists</h3>



    <div class="divider"></div>
    <br>
    <br> {{#each products }}
    <div class="row">
        
        {{#if imgUrl }}
        <div class="col s12 m4 l4">

            <a href="/product-show/{{ id }}">
                <div class="card">
                    <div class="card-image">

                        <img class="responsive-img" src="/images/product/{{ imgUrl }}"> 
                        <div class="card-footer blue-grey-text center-align">

                        </div>
                    </div>

                </div>
            </a>
        </div>

        {{/if}}


        <div class="col s12 m8 l8 ml-3">
            <a href="/product-show/{{ id }}">
                <h4 class="header-text-01">{{ title }}</h4>
                <a href="/product-show/{{ id }}">
                    {{!--
                    <p class="font-grey">{{ address }}</p> --}} 

                    {{#if locations }}
                    {{#each locations }}

                    <p class="font-grey"><i class="material-icons meduim">place</i> {{!-- {{ title }} --}} {{ addr1 }} {{ city }} {{ province }} {{ state }} {{ country }} {{ postCode }}</p>

                    {{/each}}
                    <br>
                    {{/if}}
                    <p class="font-grey">{{{stripTags (truncate desc 300)}}}</p>
                    </a>


                    <br>
                    {{!-- <div class="row">
                        <div class="right"><h4>Only {{ price.sale }} .00 Bath/Pax</h4></div>
                    </div>  --}}
                    <div class="row">

                        <div class="col s12 m12 l12">
                            <a href="/product-show/{{ id }}">
                        <div class="btn blue btn-hor-effect right">More Informations & Booking</div>
                     </a>
                        </div>

                        {{!-- <div class="col s6 m6 l6"><div style="margin-bottom: 40px;"><h5 class="right">{{ price.sale }}.00 Baht</h5></div></div> --}}
                        
                      
                    </div>   
                        
