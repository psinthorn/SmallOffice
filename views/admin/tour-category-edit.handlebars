<div class="container">


    <div class="row">

        {{> _msg}}

        <div class="col s12 m12 l12">

             <div class="col s12 m12 l12">
            <div class="card white darken-1">
                <div class="card-content gray-text">
                    <a href="/admin/tour-category" class="btn success"> Back </a>
                </div>    
            </div>

            </div>

             <div class="col s12 m12 l12">
                 <h4>Edit category</h4>
             </div>
            
            {{!-- <div class="hr-1px"></div> --}}

            

            <div class="col s12 m12 l12">
                <div class="card white darken-1">
                    <div class="card-content gray-text">

                        <form action="/admin/tour-category/{{ category.id }}?_method=PUT" method="post" enctype="multipart/form-data">                       
                            <input type="hidden" name="_method" value="PUT"> 

                            <div class="row">
                                <div class="input-field col s12 m12 l12">

                                    <input type="text" name="title" value="{{ category.title }}">
                                    <label for="title">Title</label>

                                </div>
                            </div>

                            {{!-- <div class="row">
                                <div class="input-field col s12 m12 l12">

                                    <input type="text" name="address">
                                    <label for="address">Apartment Address</label>

                                </div>
                            </div> --}}

                            <div class="row">

                                <div class="input-field col s12 m12 l12">

                                    <h5>Descriptions</h5>
                                    <textarea id="desc" name="desc" class="materialize-textarea">{{ category.desc }}</textarea>

                                </div>

                            </div>

                            <div class="row">
                                <div class="input-field col s12 m12 l12">

                                    <input type="text" name="linkUrl" value="{{ category.linkUrl }}">
                                    <label for="linkUrl">Link Url</label>

                                </div>
                            </div>
                            


                            <div class="row">
                                {{!-- <div class="col s12 m4 l4">

                                    <img src="/images/tour-category/{{ category.imgUrl }}" alt="{{ category.title }}" class="responsive-img">

                                </div>

                                <div class="col s12 m8 l8">

                                     <div class="file-field input-field">
                                        <div class="btn">
                                            <span>Image</span>
                                            <input type="file" name="imgUrl">
                                        </div>
                                        <div class="file-path-wrapper">
                                            <input class="file-path validate" type="text" value="{{ category.imgUrl }}">
                                            
                                        </div>
                                        <input type="hidden" name="oldImgUrl" value="{{ category.imgUrl }}"> 
                                    </div>
                                    
                                </div> --}}

                               

                               
                            </div>

                            <div class="row">
                                <div class="input-field col s12 m12 l12">
                                    <select name="status" id="status">
                                        {{#select category.status }}
                                        <option value="Public">Public</option>
                                        <option value="Private">Private</option>
                                        <option value="Unpublished">Unpublished</option>
                                        {{/select}}
                                        
                                    </select>
                                    <label for="status">Status</label>
                                </div>
                            </div>

                            <div class="row">
                                <input type="submit" value="Update" class="btn right">
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            {{> _image-upload-category }}

