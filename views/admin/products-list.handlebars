<div class="container-fluid">

    <div class="row">
       {{!-- {{> _msg }} --}}
    </div>


    <h3>Current product lists</h3>
    <div class="hr-1px"></div>
    <div class="row">
        <div class="left"></div>
        <a href="/admin/product/add">
            <div class="btn right">Add New Package</div>
        </a>
    </div>
    <div class="row">

        {{#if products }}

        <table class="striped">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Title</th>
                    <th>Address</th>
                    <th>Status</th>
                    <th colspan="2" class="center-align">Manage</th>

                </tr>
            </thead>

            <tbody>


                {{#each products }}


                <tr>
                    <td>
                        <img src="/images/product/{{ imgUrl }}" alt="{{ imgUrl }}" class="responsive-img" style="width: 100px">
                    </td>
                    <td>{{ title }}</td>

                    <td>
                        {{#if locations }}
                        {{#each locations }}
                        
                        {{ title }} {{ addr1 }} {{ addr2 }} {{ district }} {{ city }} {{ state }} {{ country }} {{ postCode }}

                        {{/each}}

                        {{else}}

                            No Location found, Please add

                        {{/if}}
                    </td>

                    <td>{{ status }}</td>

                    <td class="right-align">
                        <a href="/admin/product/{{ id }}" class="btn">Edit</a>
                    </td>
                    <td class="left-align">
                        <form action="/admin/product/{{ id }}?_method=DELETE" method="post" id="delete-form">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn red">X</button>
                        </form>



                    </td>


                </tr>
                {{/each}}

            </tbody>
        </table>

        {{else}}
        <p>Currently is no product available!</p>
        {{/if}}


    </div>
</div>